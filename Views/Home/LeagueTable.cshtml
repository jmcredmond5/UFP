@model UFPCore.Models.LeagueTableViewModel
@{
    ViewBag.Title = "League Table";
}

<h2>LeagueTable</h2>

@if (Model.TableData != null)
{
    for (var i = 0; i< Model.TableData.Count(); i++)
    {
        <div class="row">
            <div class="col-1">
                <p>@(i+1)</p>
            </div>
            <div class="col-5">
                @Model.TableData[i].UFPId
            </div>
            <div class="col-3">
                @Model.TableData[i].CurrentScore
            </div>
            <div class="col-3">
                +@(Model.TableData[i].CurrentScore - Model.TableData[i].LastUpdatePoints)
            </div>
        </div>
    }
}
