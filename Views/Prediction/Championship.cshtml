@model UFPCore.Models.Predictions.ChampionshipViewModel
@using UFPCore.Models
@{
    ViewBag.Title = "Championship Predictions";
}

<h2>Predictions</h2>
<div class="row">
    <partial name="_NavLinks">
</div>
@using (Html.BeginForm("Championship", "Prediction", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <h4>Predict the answers to these questions about the Championship:</h4>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <p>Who will win the Championship:</p>
                <div class="form-group form-group-small-b-margin">
                    @Html.DropDownListFor(m => m.Championship.Title, Html.GetEnumSelectList(typeof(ChampionshipTeamsEnum)), "select a team", new { @class = "form-control margin-left" })
                    @Html.ValidationMessageFor(m => m.Championship.Title, "", new { @class = "text-danger" })
                </div>
                <p>Who will be the runner up:</p>
                <div class="form-group form-group-small-b-margin">
                    @Html.DropDownListFor(m => m.Championship.RunnerUp, Html.GetEnumSelectList(typeof(ChampionshipTeamsEnum)), "select a team", new { @class = "form-control margin-left" })
                    @Html.ValidationMessageFor(m => m.Championship.RunnerUp, "", new { @class = "text-danger" })
                </div>
                <p>Who will be in the playoffs:</p>
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group form-group-small-b-margin">
                            @Html.DropDownListFor(m => m.Championship.Playoff1, Html.GetEnumSelectList(typeof(ChampionshipTeamsEnum)), "select a team", new { @class = "form-control margin-left" })
                            @Html.ValidationMessageFor(m => m.Championship.Playoff1, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group form-group-small-b-margin">
                            @Html.DropDownListFor(m => m.Championship.Playoff3, Html.GetEnumSelectList(typeof(ChampionshipTeamsEnum)), "select a team", new { @class = "form-control margin-left" })
                            @Html.ValidationMessageFor(m => m.Championship.Playoff3, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group form-group-small-b-margin">
                            @Html.DropDownListFor(m => m.Championship.Playoff2, Html.GetEnumSelectList(typeof(ChampionshipTeamsEnum)), "select a team", new { @class = "form-control margin-left" })
                            @Html.ValidationMessageFor(m => m.Championship.Playoff2, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group form-group-small-b-margin">
                            @Html.DropDownListFor(m => m.Championship.Playoff4, Html.GetEnumSelectList(typeof(ChampionshipTeamsEnum)), "select a team", new { @class = "form-control margin-left" })
                            @Html.ValidationMessageFor(m => m.Championship.Playoff4, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <p>Who will win the playoffs:</p>
                <div class="form-group form-group-small-b-margin">
                    @Html.DropDownListFor(m => m.Championship.PlayoffWinner, Html.GetEnumSelectList(typeof(ChampionshipTeamsEnum)), "select a team", new { @class = "form-control margin-left" })
                    @Html.ValidationMessageFor(m => m.Championship.PlayoffWinner, "", new { @class = "text-danger" })
                </div>
                <p>Who will be relegated:</p>
                <div class="form-group form-group-small-b-margin">
                    @Html.DropDownListFor(m => m.Championship.Relegation1, Html.GetEnumSelectList(typeof(ChampionshipTeamsEnum)), "select a team", new { @class = "form-control margin-left" })
                    @Html.ValidationMessageFor(m => m.Championship.Relegation1, "", new { @class = "text-danger" })
                </div>
                <div class="form-group form-group-small-b-margin">
                    @Html.DropDownListFor(m => m.Championship.Relegation2, Html.GetEnumSelectList(typeof(ChampionshipTeamsEnum)), "select a team", new { @class = "form-control margin-left" })
                    @Html.ValidationMessageFor(m => m.Championship.Relegation2, "", new { @class = "text-danger" })
                </div>
                <div class="form-group form-group-small-b-margin">
                    @Html.DropDownListFor(m => m.Championship.Relegation3, Html.GetEnumSelectList(typeof(ChampionshipTeamsEnum)), "select a team", new { @class = "form-control margin-left" })
                    @Html.ValidationMessageFor(m => m.Championship.Relegation3, "", new { @class = "text-danger" })
                </div>

                @Html.HiddenFor(m => m.Championship.Id)
                @Html.HiddenFor(m => m.Championship.User)
                @Html.HiddenFor(m => m.Completions.User)
                @Html.HiddenFor(m => m.Completions.Id)
                <p>When you have completed this section, tick this box: @Html.CheckBoxFor(m => m.ChampCompleted)</p> 
                <p>You can still come back and edit the predictions later.</p>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-light">Save and continue</button>
                    </div>
                </div>
            </div>
        </div>
        
    </div>
}


