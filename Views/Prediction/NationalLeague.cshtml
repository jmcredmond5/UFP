@using UFPCore.Models
@model UFPCore.Models.Predictions.NationalLeagueViewModel
@{
    ViewBag.Title = "National League Predictions";
}

<h2>Predictions</h2>
<div class="row">
    <partial name="_NavLinks"></partial>
</div>

@using (Html.BeginForm("NationalLeague", "Prediction", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <h4>Predict the answers to these questions about the National League:</h4>
    <div class="container">
        <p>Who will win the National League:</p>
        <div class="form-group form-group-small-b-margin">
            @Html.DropDownListFor(m => m.NationalLeague.Title, Html.GetEnumSelectList(typeof(NationalLeagueTeamsEnum)), "select a team", new { @class = "form-control margin-left" })
            @Html.ValidationMessageFor(m => m.NationalLeague.Title, "", new { @class = "text-danger" })
        </div>
        <p>Who will win the playoffs:</p>
        <div class="form-group form-group-small-b-margin">
            @Html.DropDownListFor(m => m.NationalLeague.PlayoffWinner, Html.GetEnumSelectList(typeof(NationalLeagueTeamsEnum)), "select a team", new { @class = "form-control margin-left" })
            @Html.ValidationMessageFor(m => m.NationalLeague.PlayoffWinner, "", new { @class = "text-danger" })
        </div>
        @Html.HiddenFor(m => m.NationalLeague.Id)
        @Html.HiddenFor(m => m.NationalLeague.User)
        @Html.HiddenFor(m => m.Completions.User)
        @Html.HiddenFor(m => m.Completions.Id)
        <p>When you have completed this section, tick this box: @Html.CheckBoxFor(m => m.NationalLgeCompleted)</p>
        <p>You can still come back and edit the predictions later.</p>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-light">Save and continue</button>
            </div>
        </div>
    </div>
}


